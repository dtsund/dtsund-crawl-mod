                 "lajatang"})

  local ego = util.random_from({"vorpal", "flaming", "freezing",
              "electrocution", "vampiricism", "draining", "venom"})

  e.mons("dancing weapon; good_item " .. weapon .. " ego:" .. ego .. "")
end

